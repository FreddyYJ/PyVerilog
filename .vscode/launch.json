// clang-format off
{
  "configurations": [
    {
      "name": "Metron",
      "preLaunchTask": "build_metron",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/metron",
      "cwd": "${workspaceFolder}",
      "args": ["-d", "-e", "-c", "examples/scratch.h", "-o", "examples/scratch.sv"],
      "setupCommands": [
        { // Display content in STL containers pretty
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
// clang-format on
