// clang-format off
{
  "configurations": [
    {
      "name": "Metron",
      "preLaunchTask": "build_metron",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/metron",
      "cwd": "${workspaceFolder}",
      "args": [
        "-e",
        "-r",
        "examples/uart/metron",
        "uart_top.h",
      ],
      //"args": [ "-e", "scratch.h" ],
